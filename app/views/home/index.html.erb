<header>
  <div class="container">
    <div class="row">
      <div class="column full">
        <div class="overlay animated pulse"></div>
        <article class="animated fadeIn">
          <h1 id="logo" class="beta">Splashbox</h1>
          <p>Hi-resolution photos delivered to your Dropbox</p>
          <a class="button" href="<%= root_url %>"><button class="purple">&larr; Back</button></a>
        </article>
      </div>
    </div>
  </div>
</header>

<section id="stats">
  <div class="container">
    <div class="row">
      <div class="column full">
        <h3 class="animated fadeInUpBig"><span class="waitlist-count count odometer" data-count="<%= @waitlist_count %>"></span> users on the waitlist</h3>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <div class="column half">
        <h2>Waitlist.</h2>
        <p>I try my best to activate a handful of accounts each day. If you're still interested you'll need to <a href="<%= auth_url %>">authorize</a> your Dropbox account before being added to the waitlist.</p>
      </div>
      <div class="column half animated fadeIn">
        <div id="waitlist">
          <table>
            <tr>
              <td><p>Name</p></td>
              <td><p>Dropbox Id</p></td>
            </tr>
            <% @waiting.each do |w| %>
              <tr>
                <td><p><%= w.name.split(' ', 2)[0] %></p></td>
                <td><p><%= w.dropbox_uid %></p></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

<footer>
  <div class="container">
    <div class="row">
      <div class="column full">
        <ul>
          <li><a href="https://gum.co/splashbox">Donate</a></li>
          <li><a href="https://github.com/hopkinschris/splashbox">Github</a></li>
          <li><a href="http://twitter.com/hopkinschris">@hopkinschris</a></li>
        </ul>
        <p class="animated fadeInUp">Powered by<a href="http://dropbox.com"><%= image_tag 'dropbox-logo.svg', width: '150', height: '42' %></a></p>
      </div>
    </div>
  </div>
</footer>
